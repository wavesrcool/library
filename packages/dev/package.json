  "name": "@wavesrcool/dev",
  "repository": {
    "directory": "packages/dev",
    "type": "git",
    "url": "https://github.com/wavesrcool/library.git"
  },
  "type": "commonjs",
  "version": "0.0.5",
  "bin": {
    "write-library": "lib/scripts/write-library.js"
  },
  "files": [
    "./lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "w": "tsc -w",
    "0l": "rm -rf lib",
    "0t": "rm -f tsconfig*tsbuildinfo",
    "c": "yarn 0l && yarn 0t && tsc --project tsconfig.build.json",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "build": "yarn lint && yarn c && yarn executable-scripts",
    "prepack": "yarn build",
    "test": "yarn jest",
    "executable-scripts": "chmod u+x ./lib/scripts/*.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "glob": "^8.0.3",
    "yargs": "^17.5.1"
  }
}
